<div class="general_user_flex">
  <%= render 'layouts/general_user_side_nav' %>
  <div>
    <div id='show_order_content'>
      <h3 id='explain_state_in_show_order'>
      注文の状況：
      <%= translate_state(@order.state) %>
      </h3>
      <p><%= raw explain_state(@order.state) %></p>
      <h3 id="ordered_index_in_order_details_index"><%= current_user.name %>さんの注文履歴</h3>
      <p><%= current_user.name %>さんは、以下のお茶を注文しています。</p>
      <div id='order_details_index_table_and_p_wraper'>
        <table id="order_details_index_table">
          <tr>
            <th class="name">品名</th>
            <th class="quantity">数量</th>
            <th class="price">単価</th>
            <th class="sum">小計</th>
          </tr>
          <% @order.order_details.each do |detail| %>
            <%= tag :tr, class: "detail#{detail.id}" %>
              <td class="name"><%= detail.item.name %></td>
              <td class="quantity"><%= detail.quantity %>個</td>
              <td class="price"><%= detail.item.price %>円</td>
              <td class="sum"><%= detail.quantity * detail.item.price %>円</td>
            </tr>
          <% end %>
        </table>
        <p><span id='order_details_index_sum_jp'>合計</span><span id='order_details_index_sum_yen'><%= @order.order_details.price_sum %>円</span></p>
      </div>
    </div>
  </div>
</div>
