<div id="nestle_input_sheet_flex_box">
  <table id="admin_order_table" class="users_table_in_admin_orders_pages">
    <tr>
      <th>お名前</th>
      <th>合計支払い金額</th>
      <th>商品内訳</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= label_tag "user_#{user.id}", user.name %></td>
        <td><%= user.order.order_details.price_sum  %></td>
        <td>
          <% user.order.order_details.each do |detail| %>
            <div class="inner_table">
              <div><%= "#{detail.item.name}(#{detail.then_price}円)" %></div>
              <div><%= "#{detail.quantity}個" %></div>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
