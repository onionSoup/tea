<header>
  <div id="for_header_menu_position">
    <h1 id="title"><%= link_to 'お茶注文用サイト', root_path %></h1>
    <div id="flex">
      <p id="greeting">こんにちは<%= signed_in_user_name %>さん</p>
      <% if signed_in?  %>
        <%= render 'application/menu_when_signed_in' %>
      <% else %>
        <p><%= link_to 'ログイン', new_session_path %>すれば、お茶の注文ができます。</p>
      <% end %>
    </div>
  </div>
  <%= render partial: 'flash', locals: {result: :success} if flash[:success] %>
  <%= render partial: 'flash', locals: {result: :error}   if flash[:error]   %>
</header>
