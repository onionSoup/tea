<header>
  <% if signed_in? %>
    <% name = @current_user.name %>
  <% else %>
    <% name = 'ゲスト'  %>
  <% end %>
  <div id="for_header_menu_position">
    <h1 id="title"><%= link_to 'お茶注文用サイト', root_path %></h1>
    <div id="flex">
      <p id="greeting">こんにちは<%= name %>さん</p>
      <% if @current_user %>
        <p id="sign_out"><%= link_to 'ログアウト', '/signout', method: :delete %></p>
        <p><%= link_to_edit_or_show %></p>
        <%#  <p><%= link_to '注文画面', edit_order_path %><%#  </p> %>
        <p id="admin_page"><%= link_to '管理者用', registered_path %></p>
      <% else  %>
        <p id="mypage"><%= link_to 'ログイン', new_session_path %>すれば、お茶の注文ができます。</p>
      <% end %>
    </div>
  </div>
  <% if flash[:error] %>
    <p id="flash_error_p"><%= flash[:error] %></p>
  <% end %>
  <% if flash[:success] %>
    <p id="flash_success_p"><%= flash[:success] %></p>
  <% end %>
</header>
